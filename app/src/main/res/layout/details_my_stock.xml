<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.sam_chordas.android.stockhawk.ui.MyStocksActivity"
    android:background="@color/colorWhite">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.sam_chordas.android.stockhawk.surfaceview.StockDetailView
            android:id="@+id/SurfaceView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </com.sam_chordas.android.stockhawk.surfaceview.StockDetailView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1 month"
                android:textSize="15sp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:id="@+id/onemonthbtn"
                android:textColor="@color/colorBlack" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3 months"
                android:textSize="15sp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:id="@+id/threemonthbtn"
                android:textColor="@color/colorBlack"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6 months"
                android:textSize="15sp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:id="@+id/sixmonthbtn"
                android:textColor="@color/colorBlack"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12 MONTHS"
                android:textSize="15sp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:id="@+id/oneyearbtn"
                android:textColor="@color/colorBlack"/>


        </LinearLayout>





    </LinearLayout>


</RelativeLayout>
